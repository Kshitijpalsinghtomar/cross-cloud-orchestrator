{
  "name": "cross-cloud-orchestrator-root",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "start:api": "node packages/api/dist/server.js",
    "dev": "npm run dev --workspaces",
    "dev:api": "npm start --workspace=@cc-orch/api",
    "dev:dashboard": "npm run dev --workspace=@cc-orch/dashboard",
    "dev:monitor": "npm run start:monitor",
    "start:monitor": "echo 'Starting Monitor (Simulated)...' && node -e \"setInterval(() => {}, 1000)\""
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}